<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="com.italtel.iota.demo.VirtualGasMeter"
         name="VirtualGasMeter" 
         description="This is a simulator for an heater gateway application. Its configuration options will be passed down the smart heater. ">
        
        <Icon resource="OSGI-INF/virtual_gas_meter.png" size="32"/>

        <AD id="initial.measure"  
            name="initial.measure"
            type="Double"
            cardinality="0" 
            required="true"
            default="450"
            description="Initial value for the measure metric."/>

        <AD id="publish.cron.expr"  
            name="publish.cron.expr"
            type="String"
            cardinality="0" 
            required="true"
            default="0 0 0 1/1 * ? *" 
            description="Default cron expression to schedule sending measure."/>

        <AD id="publish.semanticTopic"  
            name="publish.semanticTopic"
            type="String"
            cardinality="0" 
            required="true"
            default="measure" 
            description="Default semantic topic to publish the messages to."/>
        
        <AD id="publish.qos"  
            name="publish.qos"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            description="Default QoS to publish the messages with.">
           <Option label="Fire and forget" value="0"/>
           <Option label="Al least once" value="1"/>          
           <Option label="At most once" value="2"/>
        </AD>

        <AD id="publish.retain"  
            name="publish.retain"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="false" 
            description="Default retaing flag for the published messages."/>
            
         <AD id="meter.size"
            name="meter.size"
            type="Integer"
            cardinality="0" 
            required="true"
            default="1" 
            description="amount of meters."/>
          
    </OCD>
    
    <Designate pid="com.italtel.iota.demo.VirtualGasMeter">
        <Object ocdref="com.italtel.iota.demo.VirtualGasMeter"/>
    </Designate>
</MetaData>
